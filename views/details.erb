<h4>Post details:</h4>
<p>
	<%= @post[:content] %>
	<br>
	<br>
	Added at <%= @post[:created_at] %>
	<br>
	Autor: <%= @post[:autor] %>
	<br>
</p>
</br>
<h4>Comments:</h4>
<br>
<% @comments.each do |comment| %>
	<p>
		<%= comment[:content] %>
		<br>
		<br>
		<span style="font-size: 75%; color: #999">Added at <%= comment[:created_at] %></span>
	</p>
	<hr>	
<% end %>

<p>
	<form action="/details/<%= @post[:id] %>" method="POST">
		<div class="form-group">
	  	<textarea name="content" class="form-control" rows="6" placeholder="Type comment text here"></textarea>
		</div>

		<div class="form-group">
	  	<button type="submit" class="btn btn-primary">Add comment</button>
	  </div>
	</form>
</p>							